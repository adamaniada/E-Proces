<%- include('../base', { 
    pageTitle: 'Réinitialiser le mot de passe', 
    siteTitle: process.env.SITE_TITLE || 'e-proces', 
    content: `
      <div class="container mt-5">
        <div class="row justify-content-center">
          <div class="col-md-6">
            <div class="card">
              <div class="card-body">
                <h2 class="card-title mb-4 text-center">Réinitialiser le mot de passe</h2>
                <p class="card-text text-center">
                  Entrez votre adresse email pour réinitialiser votre mot de passe.
                </p>
                <form action="/auth/reset-password" method="post">
                  <div class="mb-3">
                    <label for="email" class="form-label">Adresse email :</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                  </div>
                  
                  <div class="mb-3 text-center">
                    <button type="submit" class="btn btn-primary">Envoyer le lien de réinitialisation</button>
                  </div>
                </form>
  
                <!-- Additional elements for users with existing accounts -->
                <div class="text-center mt-3">
                  <p>Vous vous souvenez de votre mot de passe ?</p>
                  <a href="/auth/login" class="btn btn-outline-primary">Se connecter</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    ` 
}) %>
