<%- include('../base', { 
  pageTitle: 'Connexion', 
  siteTitle: process.env.SITE_TITLE || 'e-proces',
  content: `
    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">
              <h2 class="card-title mb-4 text-center">Bienvenue sur e-proces</h2>
              <p class="card-text text-center">
                Connectez-vous à votre compte pour accéder à vos procédures judiciaires en ligne.
              </p>
              <form action="/auth/login" method="post">
                <div class="mb-3">
                  <label for="username" class="form-label visually-hidden">
                    <i class="bi bi-person-fill"></i> Nom d'utilisateur :
                  </label>
                  <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                    <input type="text" class="form-control" id="username" name="username" placeholder="Nom d'utilisateur" required>
                  </div>
                </div>
                <div class="mb-3">
                  <label for="password" class="form-label visually-hidden">
                    <i class="bi bi-lock-fill"></i> Mot de passe :
                  </label>
                  <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Mot de passe" required>
                  </div>
                </div>
                <div class="mb-3 text-center">
                  <button type="submit" class="btn btn-primary">
                    <i class="bi bi-box-arrow-in-right"></i> Se Connecter
                  </button>
                </div>
              </form>
              <div class="text-center">
                <p class="mb-0">
                  <a href="/auth/reset-password">
                    <i class="bi bi-key-fill"></i> Vous avez oublié votre mot de passe ? Réinitialisez-le ici
                  </a>
                </p>
                <p class="mb-0">
                  <a href="/auth/register">
                    <i class="bi bi-person-plus-fill"></i> Pas encore inscrit ? Inscrivez-vous maintenant
                  </a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  ` 
}) %>
